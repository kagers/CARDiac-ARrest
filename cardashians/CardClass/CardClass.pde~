class Card {
  PImage photo;
  //0->3, diamond->spade respectively
  int suit;
  //0->8, six->ace respectively 
  int value;
  //something for animation
  Card(int s, int v) {
    suit=s;
    value=v;
    int pindex=(4*v)+s;
    String filename="../pics/c"+pindex+".png";
    photo=loadImage(filename);
  }
}
